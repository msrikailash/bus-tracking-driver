<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/navHeaderProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryVariant"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bus" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/navHeaderDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="Driver Name"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navHeaderDriverId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="ID: DRV001"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/colorOnPrimaryVariant" />

    <TextView
        android:id="@+id/navHeaderBusNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/status_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Bus: B001"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold" />

</LinearLayout>
