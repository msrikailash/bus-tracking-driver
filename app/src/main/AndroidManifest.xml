<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Optional hardware features -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:name=".BusTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusTrakerManager">

        <!-- Location Service -->
        <service
            android:name=".service.LocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Location Update Receiver -->
        <receiver
            android:name=".receiver.LocationUpdateReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Foreground Location Service -->
        <service
            android:name=".services.LocationForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Geofencing Service -->
        <service
            android:name=".services.GeofenceService"
            android:enabled="true"
            android:exported="false" />

        <!-- FCM Messaging Service -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Activities -->
        <activity android:name=".ui.LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.DashboardActivity" android:exported="false" />
        <activity android:name=".ui.StopsManagementActivity" android:exported="false" />
        <activity android:name=".ui.StopsListActivity" android:exported="false" />
        <activity android:name=".ui.AddStopActivity" android:exported="false" />
        <activity android:name=".ui.EditStopActivity" android:exported="false" />
        <activity android:name=".ui.MapSelectionActivity" android:exported="false" />
        <activity android:name=".ui.RouteMapActivity" android:exported="false" />
        <activity android:name=".ui.LeaveApplicationActivity" android:exported="false" />
        <activity android:name=".ui.QRCheckInActivity" android:exported="false" />
        <activity android:name=".ui.ReportIssueActivity" android:exported="false" />
        <activity android:name=".ui.SettingsActivity" android:exported="false" />
        <activity android:name=".ui.DiagnosticsActivity" android:exported="false" />
        <activity android:name=".ui.TripHistoryActivity" android:exported="false" />
        <activity android:name=".ui.BusQRScannerActivity" android:exported="false" />
        <activity android:name=".ui.LocationSharingActivity" android:exported="false" />
        <activity android:name=".ui.LocationHistoryActivity" android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Google Maps API Key (set in res/values/google_maps_api.xml) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBqWpQ6NaPXb6THiE1qxk7HmodNaVJHrrY" />
    </application>
</manifest>